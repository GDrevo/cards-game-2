<div class="pvp-container">
  <%= link_to new_pvp_battle_path(opponent_id: @first_opponent.id) do %>
    <div class="pvp-opponent">
      <h5><%= @first_opponent.player.name %></h5>
      <div class="pvp-bcs">
        <% @first_opponent.pvp_battle_cards.each_with_index do |bc, index| %>
          <div class="pvp-bc pvp-bc-<%= index + 1 %>">
            <%= image_tag bc.card.photo %>
            <p>lvl <%= bc.card.level %></p>
          </div>
        <% end %>
      </div>
      <p>Rank: <%= @first_opponent.rank %></p>
