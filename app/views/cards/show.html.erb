<div class="cards-show-container">
  <div class="cards-show-unit-part">
    <div class="c-s-u-p-left">
      <div class="c-s-u-p-l-up">
        <h3>WEAPON</h3>
        <%= link_to gears_path(card_id: @card.id, gear_type: "weapon #{@card.gear_set.level}") do %>
          <%= image_tag "add gear.png" %>
        <% end %>
      </div>
      <div class="c-s-u-p-l-down">

      </div>
    </div>
    <div class="c-s-u-p-center">
      <div class="c-s-u-p-c-up">
        <%= image_tag @card.photo %>
      </div>
      <div class="c-s-u-p-c-down">
        <h3>ARTIFACT</h3>
        <%= link_to gears_path(card_id: @card.id, gear_type: "artifact #{@card.gear_set.level}") do %>
          <%= image_tag "add gear.png" %>
        <% end %>
      </div>
    </div>
    <div class="c-s-u-p-right">
      <div class="c-s-u-p-r-up">
        <h3>ARMOR</h3>
        <%= link_to gears_path(card_id: @card.id, gear_type: "armor #{@card.gear_set.level}") do %>
          <%= image_tag "add gear.png" %>
        <% end %>
      </div>
      <div class="c-s-u-p-r-down">

      </div>
    </div>
  </div>
  <div class="cards-show-stats-part">
    <div class="c-s-s-p-up-outer">
      <div class="c-s-s-p-up-inner">
        <h3>STATS :</h3>
        <p>hit points : <%= @card.hit_points %> ( <span class=<%= @b_hp.positive? ? "green" : "grey" %>>+ <%= @b_hp %></span> )</p>
        <p>armor : <%= @card.armor %> ( <span class=<%= @b_armor.positive? ? "green" : "grey" %>>+ <%= @b_armor %></span> )</p>
        <p>power : <%= @card.power %> ( <span class=<%= @b_power.positive? ? "green" : "grey" %>>+ <%= @b_power %></span> )</p>
        <p>speed : <%= @card.speed %> ( <span class=<%= @b_speed.positive? ? "green" : "grey" %>>+ <%= @b_speed %></span> )</p>
      </div>
    </div>
    <div class="c-s-s-p-down">
      <p>Gear lvl : <%= @card.gear_set.level %></p>
    </div>
  </div>
</div>
